import random
import string

def create_password(length):
    # Define possible characters for the password
    chars = string.ascii_letters + string.digits + string.punctuation
    
    # Generate password using random.choices (Python 3.6+)
    new_password = ''.join(random.choices(chars, k=length))
    
    return new_password

def run():
    print("Welcome to the Secure Password Generator!")
    print("-----------------------------------------")
    
    # Input for password length
    while True:
        try:
            pwd_length = int(input("Enter the desired length of your password: "))
            if pwd_length <= 0:
                print("Please enter a positive integer.")
            else:
                break
        except ValueError:
            print("Invalid input. Please enter a valid integer.")
    
    # Generate password
    generated_password = create_password(pwd_length)
    
    # Display the generated password
    print("\nYour generated password is:")
    print(generated_password)

# Run the run function
if __name__ == "__main__":
    run()

