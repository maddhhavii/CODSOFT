# Function to add two numbers
def sum_numbers(a, b):
    return a + b

# Function to subtract two numbers
def subtract_numbers(a, b):
    return a - b

# Function to multiply two numbers
def multiply_numbers(a, b):
    return a * b

# Function to divide two numbers
def divide_numbers(a, b):
    if b == 0:
        return "Error! Division by zero is not allowed."
    else:
        return a / b

# Main function to take input from the user and perform calculations
def calculator_app():
    print("Select operation:")
    print("1. Add")
    print("2. Subtract")
    print("3. Multiply")
    print("4. Divide")

    operation = input("Enter choice (1/2/3/4): ")

    first_number = float(input("Enter the first number: "))
    second_number = float(input("Enter the second number: "))

    if operation == '1':
        print(first_number, "+", second_number, "=", sum_numbers(first_number, second_number))
    elif operation == '2':
        print(first_number, "-", second_number, "=", subtract_numbers(first_number, second_number))
    elif operation == '3':
        print(first_number, "*", second_number, "=", multiply_numbers(first_number, second_number))
    elif operation == '4':
        print(first_number, "/", second_number, "=", divide_numbers(first_number, second_number))
    else:
        print("Invalid input")

# Calling the calculator_app function to start the program
calculator_app()
